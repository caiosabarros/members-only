<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
      <% if user_signed_in?%>
       <td><strong><%= post.user.name %></strong></td>
      <td><strong><%= post.user.username %></strong></td>
      <% else %>
       <td><strong> Anonymous Author</strong></td>
       <td><strong> anonymous username</strong></td>
      <%end%>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
